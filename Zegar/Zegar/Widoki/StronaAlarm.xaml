<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zegar.Widoki.StronaAlarm">
    <ContentPage.Content>
        <Grid>
            <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">
                <TimePicker x:Name="czasTP" Format="hh:mm" TextColor="White" WidthRequest="200"></TimePicker>
                <Button x:Name="ustawAlarmBTN" Clicked="UstawAlarmBTN_Clicked" CornerRadius="30" Text="ustaw alarm" TextColor="DarkGray" BackgroundColor="White"></Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>