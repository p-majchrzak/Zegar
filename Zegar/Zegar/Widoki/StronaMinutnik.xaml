<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zegar.Widoki.StronaMinutnik">
    <ContentPage.Content>
        <Grid>
            <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Ustaw czas: " FontSize="20" TextColor="White"></Label>
                <Entry x:Name="czasTP" Placeholder="Podaj czas w minutach" PlaceholderColor="White" TextColor="White" WidthRequest="200"></Entry>
                <Label x:Name="liczonyCzasTXT" Margin="0,20,0,20" HorizontalOptions="Center" Text="00:00" FontSize="30" TextColor="White"></Label>
                <Button x:Name="StartBTN" Clicked="StartBTN_Clicked" CornerRadius="30" Text="Start" TextColor="DarkGray" BackgroundColor="White"></Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>